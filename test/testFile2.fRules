interface A {
    foo: Number;
    bar: String | Timestamp;
    name: String;
    age: Number | Timestamp;
}

interface B {
    value: Bool;
}

match /collection/[item] {
    read, delete: {
        if item.a == true {
            return item only B;
        }
        if item isOnly B {
            return true
        }
        return item is A;
    },
    write: resource is A;
}

match /collection/[things]/subCollection/[othertings] {
    read: resource is A;
}