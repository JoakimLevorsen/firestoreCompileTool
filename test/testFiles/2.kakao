interface User {
    name: String;
    displayName?: String;
}

interface Resturant {
    name: String;
    location: Geopoint;
    url?: String;
    owner: String;
}

interface Review {
    title: String;
    stars: Number;
    imageURL?: String |Â Number;
    user: String;
}

match /users/[user] {
    read: request.auth != null;
    write: {
        if request.auth.uid == user.id {
            return user isOnly User || false;
        }
        return false;
    },
}

match /resturants/[resturant] {
    read: request.auth != null;
    create: {
        if (resturant isOnly Resturant) {
            return resturant.owner == request.auth.uid;
        }
        return false;
    },
    write: {
        if resource.owner == request.auth.uid {
            return resturant isOnly Resturant;
        }
        return false;
    },
    match /reviews/[review] {
        read: request.auth != null;
        create: {
            if review isOnly Review {
                return review.user == request.auth.uid;
            }
            return false;
        }
        delete: resource.user == request.auth.uid;
    }
}